{
  "data": {
    "root": "dataset/",
    "dataset_name": "t1",
    "target": "energy_force",
    "train_dataset": "t1",
    "train_size": 2000,
    "valid_dataset": "t1",
    "valid_size": 2000,
    "test_dataset": "t1",
    "seed": 42
  },
  "model": {
    "name": "Alphanet",
    "num_layers": 3,
    "num_targets": 1,
    "output_dim": 1,
    "pos_require_grad": true,
    "compute_forces": true,
    "use_pbc": true,
    "has_dropout_flag": false,
    "hidden_channels": 256,
    "cutoff": 4,
    "num_radial": 128
  },
  "train": {
    "epochs": 200,
    "batch_size": 24,
    "accumulation_steps": 1,
    "vt_batch_size": 24,
    "lr": 0.0001,
    "lr_decay_factor": 0.8,
    "lr_decay_step_size": 80,
    "weight_decay": 0,
    "save_dir": "t1",
    "log_dir": "",
    "disable_tqdm": false,
    "scheduler": "cosineannealinglr",
    "norm_label": false,
    "device": "cuda",
    "force": true,
    "energy_loss": "mae",
    "force_loss": "mae",
    "energy_metric": "mae",
    "force_metric": "mae",
    "energy_coef": 4.0,
    "force_coef": 100.0,
    "eval_steps": 1
  }
}
